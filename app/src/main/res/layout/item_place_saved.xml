<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/lnCard"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/background_item_place_saved"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="@color/teal_200"
            android:textSize="16sp"
            tools:text="hierva" />


    </LinearLayout>

    <ImageView
        android:id="@+id/ivPlace"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/lnCard"
        app:layout_constraintEnd_toEndOf="@+id/lnCard"
        app:layout_constraintTop_toTopOf="@id/lnCard"
        />

</androidx.constraintlayout.widget.ConstraintLayout>